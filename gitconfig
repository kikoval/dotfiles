[core]
	editor = vim
[merge]
	tool = vimdiff
[color]
	ui = true
[alias]
        br = branch -a
        s = status -u -s
        st = status
        ci = commit
        co = checkout
        redocommit = reset --soft HEAD^
        unstage = reset -- HEAD
        pl = pull
        ph = push
        lg = log -p --graph
        l1 = log --oneline --decorate
        l2 = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[include]
        path = .gitconfig.local

[push]
	default = simple
